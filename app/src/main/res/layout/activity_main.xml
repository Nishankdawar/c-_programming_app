



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/learn"
            android:layout_width="270dp"
            android:layout_height="220dp"
            android:paddingTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/learn1"
            android:text="Learn"
            android:textColor="#000000"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/quiz10"

            android:layout_width="280dp"
            android:layout_height="220dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/practice1"
            android:layout_weight="1.0"
            android:text="Practice"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"

            android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        >

        <Button
            android:id="@+id/settings"


            android:layout_weight="1.0"
            android:paddingTop="10dp"
            android:text="Forum"
            android:layout_marginRight="8dp"
            android:layout_width="260dp"
            android:drawableTop="@drawable/about1"
            android:textColor="#000000"

            android:layout_height="220dp"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/share"


            android:layout_weight="1.0"
            android:text="Miscellaneous"
            android:paddingTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="270dp"            android:textColor="#000000"

            android:drawableTop="@drawable/share1"
            android:layout_height="220dp"
            android:background="#FFFFFF"/>

    </LinearLayout>
</LinearLayout>
