<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#f4f4f4"
        android:layout_marginTop="10dp"

        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="#F4f4f4"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="Select from the topics given below. Videos are also available for each topic in both English and Hindi in the Miscellaneous section."/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GETTING STARTED"
            android:id="@+id/button1"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA TYPES, VARIABLES AND CONSTANTS"
            android:id="@+id/button2"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPERATORS AND EXPRESSIONS"
            android:id="@+id/button3"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLOW OF CONTROL"
            android:id="@+id/button4"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FUNCTIONS IN C++"
            android:id="@+id/button5"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARRAYS IN C++"
            android:id="@+id/button6"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STRUCTURES IN C++"
            android:id="@+id/button7"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OBJECT ORIENTED PROGRAMMING"
            android:id="@+id/button8"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASSES AND OBJECTS"
            android:id="@+id/button9"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONSTRUCTORS AND DESTRUCTORS"
            android:id="@+id/button10"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INHERITANCE"
            android:id="@+id/button11"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA STRUCTURES"
            android:id="@+id/button12"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STACKS"
            android:id="@+id/button13"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUEUES"
            android:id="@+id/button14"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POINTERS IN C++"
            android:id="@+id/button15"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA FILE HANDLING"
            android:id="@+id/button16"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATABASES AND SQL"
            android:id="@+id/button17"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOLEAN ALGEBRA"
            android:id="@+id/button18"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMUNICATION TECHNOLOGIES"
            android:id="@+id/button19"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>